
    <div class="row">
        <div class="col-md-12">
            <h4>Palavras mais buscadas</h4>
            {% for word,key in mostCommonWords %}
                <button type="button" class="btn btn-primary">
                    {{ word }} <span class="badge bg-secondary">{{ key }}</span>
                </button>
            {% endfor %}
        </div>

        <div class="col-md-12 mt-3">
            <h4>Resultados</h4>
            <div class="row">
            {% for video in response.items %}
{#                <li><a href="https://www.youtube.com/watch?v={{ video.id.videoId }}">{{ video.snippet.title }}</a></li>#}
                <div class="card col-md-3" data-videoid="{{ video.id.videoId }}">
                    <div class="card-image">
                        <div>
                            <img src="{{ video.snippet.thumbnails.medium.url }}" alt="{{ video.snippet.title }}">
                        </div>
                    </div>

                    <div class="card-content">
                        <span class="card-title">
                            {{ video.snippet.title }} -
                            {% for details in contentDetails %}
                                {% if details.id == video.id.videoId %}
                                    {{ details.contentDetails.duration|replace({'PT' : '' , 'H' : ':', 'M':':', 'S':'' })|lower }}
                                {% endif %}
                            {% endfor %}
                        </span>
                    </div>

                </div>
            {% endfor %}

            </div>
        </div>

    </div>
